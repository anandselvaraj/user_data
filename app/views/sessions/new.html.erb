

<div class="container">
  <div class="login_cont">
  <h2 style="color:green;">Login</h2>
  <%= form_tag '/login' do%>
    <div class="form-group">
      <label for="email"><%= label_tag :username%></label>
      <%= text_field_tag :username,{}, class: "form-control", placeholder: "Enter Username"%>
    </div>
    <div class="form-group">
      <label for="email"><%= label_tag :password%></label>
      <%= password_field_tag :password,{}, class: "form-control", placeholder: "Enter Password"%><br>
    </div>
    <div class="row">
  <div class="col-sm-2"><%= submit_tag "Login",class: "btn btn-primary" %></div>
  
    
  <%end%>
  <div class="col-sm-2"><%= button_to "Sing Up", '/users/new', method: :get,:class=>"btn btn-success"%></div>
</div>
</div>
</div>

